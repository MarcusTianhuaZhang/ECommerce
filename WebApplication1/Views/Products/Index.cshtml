@model IEnumerable<Product>

@{
    ViewData["Title"] = "List of Products";
}

<div class="row justify-content-between">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-12 border-primary card mb-3" style="max-width: 550px;">
            <div class="row flex-column g-0 h-100">
                <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ProductName
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                </div>
                <div class="row flex-grow-1">
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" alt="@item.ProductName">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
@*                             <p class="card-text">@item.Description</p>
 *@                            <p class="card-text"><b>Company: </b>@item.Company.CompanyName</p>
                            <p class="card-text"><b>Category: </b>@item.Category</p>
                            <p class="card-text"><b>Release Date: </b>@item.ReleaseDate.ToString("dd MMM yy")</p>

                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-success text-white)" 
                                   asp-controller="Orders" 
                                   asp-action="AddToShoppingCart" 
                                   asp-route-id="@item.Id">
                                <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))</a>
                            </p>
                        </div>
                    </div>
                </div>
        </div>
    }
</div>

@await Html.PartialAsync("_CreateItem", "Products") 