<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <style> 
        @@media (min-width: 1200px) {
            .productlayout {
                max-width: 1300px;
            }
        }

        @@media (max-width: 767px) {
            .icon {
                width: 60px; 
                height: 60px; 
            }
        }
        .black-background {
            background-color: black;
        }
        .nav-link {
            color: white; 
        }

        .productcard {
            width: 580px;
            background: white;
            box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        }

        .photo {
            padding: 20px;
            width: 40%;
            height:100%;
            text-align: center;
            float: left;

        }
        

        .description {
            padding: 30px;
            float: left;
            width: 60%;
            border-left: 2px solid #efefef;
        }
            

        .cardbutton {
            border: 1px solid #d9d9d9;
            padding: 8px 0px;
            margin-bottom: 30px;
            //color: #515151;
            width: 125px;
            margin-right: 5px;
            font-weight: 500;
            
        }

        .productcard:hover {
            box-shadow: 0 8px 17px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19);
        }

        .button:hover {
            border: 1px solid #aedaa6;
            color: #aedaa6;
            cursor: pointer;
        }

        .h1card {
            color: #515151;
            font-weight: 300;
            padding-top: 15px;
            margin: 0;
            font-size: 30px;
            font-weight: 300;
        }

        .h2card {
            color: #515151;
            margin: 0;
            text-transform: uppercase;
            font-weight: 500;
            font-size: 24px;
        }

        .h4card {
            margin: 0;
            color: #727272;
            text-transform: uppercase;
            font-weight: 500;
            font-size: 18px;
        }

        .pcard {
            font-size: 12px;
            line-height: 20px;
            color: #727272;
            padding: 20px 0;
            margin: 0;
            font-size: 18px;
        }

    
        
        
     </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area"" asp-controller="Home" asp-action="Index"><strong>EStore</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Products" asp-action="Index"></i> Products</a>
                        </li>

                         @if(User.Identity.IsAuthenticated && User.IsInRole("Admin")) 
                         { 
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-gear"></i> Management
                                </a>

                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-controller="Products" asp-action="Index"><i class="bi bi-laptop"></i> Products</a>
                                    <a class="dropdown-item" asp-controller="Companies" asp-action="Index"><i class="bi bi-building"></i> Companies</a>
                                </div>
                            </li>
                         } 
                        
                    </ul>

     

                    <form class="form-inline my-2 my-lg-0" asp-controller="Products" asp-action="Filter" style="padding-right: 25px;">
                        <div class="row">
                            <div class="col-9">
                                <input name="searchString" type="text" class="form-control" placeholder="Search for a Product..." aria-label="Recipient's username" aria-describedby="button-addon2">
                            </div>
                            <div class="col-3">
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                            </div>
                        </div>
                    </form>
                   @*  <ul class="navbar-nav">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </ul> *@
                    <partial name="_Identity.cshtml" />

                   
                </div>
            </div>
        </nav>
        <section class="w-100 border-bottom box-shadow p-3 mb-3 black-background">
            <ul class="nav nav-pills justify-content-center">
                        <li class="nav-item">
                    <a class="nav-link" asp-controller="Products" asp-action="GetByCategory" asp-route-category = "GPU">GPU </a>
                        </li>
                        <li class="nav-item">
                    <a class="nav-link" asp-controller="Products" asp-action="GetByCategory" asp-route-category="CPU">CPU</a>
                        </li>
                        <li class="nav-item">
                    <a class="nav-link" asp-controller="Products" asp-action="GetByCategory" asp-route-category="VideoWall">Video Wall</a>
                        </li>
                        <li class="nav-item">
                    <a class="nav-link" asp-controller="Products" asp-action="GetByCategory" asp-route-category="EncodersAndDecoders">Encoders & Decoders</a>
                        </li>
                
            </ul>
        </section>


    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 -Marcus Tianhua Zhang - EStore
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
   @*  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>